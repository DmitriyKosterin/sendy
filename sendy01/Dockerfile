# Используем официальный образ Golang в качестве базового образа
FROM golang:latest as builder

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем go.mod и go.sum, чтобы ускорить загрузку зависимостей
COPY go.mod go.sum ./

# Загружаем зависимости без сборки приложения
RUN go mod download

# Копируем остальные файлы проекта
COPY . .

# Собираем серверный код Go
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o /app/main .

# Отдельный этап, чтобы уменьшить размер образа
FROM alpine:latest

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем все файлы из предыдущего образа
COPY --from=builder /app .

# Экспортируем порт, на котором работает ваш сервер
EXPOSE 50051

# Запускаем ваш сервер при старте контейнера
CMD ["./main"]
